@model TheNorthernHandyman.Models.ContactEmailModels
@{
    ViewBag.Title = "ContactEmail";
}

<h2>ContactEmail</h2>


@using (Html.BeginForm("ContactEmail", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "contact-form", role = "form" }))
{
    @Html.ValidationSummary()
    <fieldset>
        <div class="form-div-1">
            <label class="name">
                @Html.TextBoxFor(m => m.Name,  new { @placeholder = "Name *", @type = "text" } , new { @id = "nameValue" } )
                
            </label>
        </div>
        <div class="form-div-2">
            <label class="email">
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email Address *", @type = "email" })
            </label>
        </div>
        <div class="form-div-3">
            <label class="phone notRequired">
                @Html.TextBoxFor(m => m.Phone, new { @placeholder = "Telephone Number", @type = "text" })
            </label>
        </div>
        <div>
            <label class="message">
                @Html.TextAreaFor(m => m.Message, new { @placeholder = "Message *" })
            </label>
        </div>
        <div class="button-wrapper">
            <input type="submit" value="Send" name="submit" class="button" onclick="onSubmit()"> <input type="reset" value="Reset" name="MFReset" class="button"><span>* Required Fields</span>
        </div>
    </fieldset>
}

<script>

    function onSubmit() {

        var ValidationMessage = "test";

        var name = document.getElementsByClassName("name");
        var email = document.getElementsByClassName("email");
        var phone = document.getElementsByClassName("phone notRequired");
        var message = document.getElementsByClassName("message");

        if (name == "" || name == null || name == "Name *")
        {
            ValidationMessage = "Please add your name \n"
        }

        if (email == "" || email == null)
        {
            if (ValidationMessage == "" || ValidationMessage == null)
            {
                ValidationMessage = "Please add your email \n"
            }

            ValidationMessage = ValidationMessage + " and please add your email \n"
        }


        if (phone == "" || phone == null)
        {
            if (ValidationMessage == "" || ValidationMessage == null)
            {
                ValidationMessage = "Please add your phone \n"
            }

            ValidationMessage = ValidationMessage + " and please add your phone \n"
        }


        if (message == "" || message == null)
        {
            if (ValidationMessage == "" || ValidationMessage == null)
            {
                ValidationMessage = "Please add your job description \n"
            }

            ValidationMessage = ValidationMessage + " and please add your job description \n"
        }
        alert(ValidationMessage);


    };


</script>
